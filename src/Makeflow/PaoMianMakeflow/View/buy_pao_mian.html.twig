{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
    {% verbatim %}
        <div id="articleApp">
        <rich-editor name="content" :value="article.content" content-change-event="contentChange"></rich-editor>
        </div>
    {% endverbatim %}
        <script>
            var articleApp;
            require(["rich-editor"], function () {
                articleApp = new Vue({
                    el: "#articleApp",
                    data: {
                        article: {content:""},

                    },
                    events: {
                        contentChange: function (newValue, oldValue, subject) {
                            this.article.content = newValue;
                        }
                    }
                });
            });
        </script>

        <form method="post">
            <input name="paidMoney" type="number" placeholder="买泡面开销">
            <button type="submit">买完泡面</button>
        </form>


        {{ dump(noteList) }}
        {{ dump(workspace) }}

    </div>
{% endblock %}

